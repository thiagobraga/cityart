# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.less]
indent_size = 2

[*.yaml]
indent_size = 2

[*.coffee]
indent_size = 2

[grunt**.js]
indent_size = 2

# Matches the exactly files
[{Gruntfile.js,package.json,bower.json,.htaccess}]
indent_size = 2
